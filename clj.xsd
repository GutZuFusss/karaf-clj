<?xml version="1.0" encoding="UTF-8" ?>
<clj:schema xmlns:clj="https://raw.githubusercontent.com/GutZuFusss/karaf-clj/main/clj.xsd">

    <!-- ATTRIBUTES -->
    <clj:attribute name="id" type="clj:string"/>

    <!-- ELEMENTS -->
    <clj:element name="start-fn" type="clj:string"/>
    <clj:element name="stop-fn" type="clj:string"/>

    <!-- COMPLEX -->
    <clj:element name="cljBundle">
        <clj:complexType>
            <clj:attribute ref="id" use="required"/>
            <clj:sequence>
                <clj:element ref="start-fn"/>
                <clj:element ref="stop-fn"/>
            </clj:sequence>
        </clj:complexType>
    </clj:element>

</clj:schema>
